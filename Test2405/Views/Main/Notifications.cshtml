@model List<Test2405.Models.NotificationModel>
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<br />

<center>
    <b>Notifications</b>
</center>

<br />

<button type="submit" class="w3-button w3-blue" style="border-radius:4px;float:left;" onclick="@("window.location.href='" + @Url.Action("Notifications_New", "Main") + "'");">+ New</button>

<div style="float:right;">

    <div style="padding-right:10em;position:relative;display:inline-block;">
        <img id="up_file" src="~/images/search_icon.svg" width="25" height="25" style="margin-top:1%;left:60%;cursor:pointer;position:absolute;" />
        @Html.TextBox("Search", "", new { @placeholder = "Search", @class = "form-control", @style = "width:200px;" })

        <input type="file" id="file_input" name="file_input" style="display:none;" onchange="rewrite(this.value)" />
    </div>
</div>

<br />

@using (Html.BeginForm("", "Main", new { pageName = "Notifications" }, FormMethod.Post))
{
    <br />
    <table style="border:1px solid #ddd;" cellspacing="0" cellpadding="2" width="100%">
        <tr style="background-color:#eaeaea;text-align:center;">
            
            <td style="border-right:1px solid #ddd;">
                Created On
            </td>
            <td style="border-right:1px solid #ddd;">
                Platform
            </td>
            <td style="border-right:1px solid #ddd;">
                Notifications
            </td>
            <td style="border-right:1px solid #ddd;">
                Status
            </td>
            <td style="border-right:1px solid #ddd;">By</td>
            <td style="border-right:1px solid #ddd;"></td>
            <td style="border-right:1px solid #ddd;"></td>
        </tr>

        @for (var i = 0; i < Model.Count(); i++)
        {
        <tr style="text-align:center;">
            
            <td>
                @Html.DisplayFor(modelitem => Model[i].NotificationCreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelitem => Model[i].NotificationPlatform)
            </td>
            <td>
                @Html.DisplayFor(modelitem => Model[i].NotificationMsg)
            </td>
            <td>
                @Html.DisplayFor(modelitem => Model[i].NotificationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelitem => Model[i].NotificationBy)
            </td>
            <td>
                <a href="@Url.Action("Notifications_Edit", "Main", new{ID = Model[i].NotificationID})">
                    <img src="~/images/edit_icon.svg" width="25" height="25" />
                </a>
            </td>
            <td>
                <a href="@Url.Action("DeleteNotification", "Main", new {id = Model[i].NotificationID})">
                    <img src="~/images/delete_icon.svg" width="25" height="25" />
                </a>
            </td>
        </tr>
        }
    </table>
}